apikey = 'b2f7276693524dc1283929277faa0eae' 
url = "https://api.openweathermap.org/data/2.5/weather"

params = {'q' :"delhi",
          'appid' : apikey,
          'units':'metric'}

import requests

data = requests.get(url, params=params)

data.json()
